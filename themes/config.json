{
    "themes": [
        "solarized_light",
        "onedark"
    ],
    "programs": {
        "gitui": {
            "destination_file": "~/.config/gitui/theme.ron",
            "source_dir": "~/.dotfiles/themes/gitui",
            "theme_name_mapping": {
                "solarized_light": "solarized-light.ron",
                "ondark": "onedark.ron"
            }
        },
        "nvim": {
            "destination_file": "~/.config/nvim/core/colorschemes.lua",
            "source_dir": "~/.dotfiles/themes/nvim",
            "theme_name_mapping": {
                "solarized_light": "solarized-light.lua",
                "ondark": "onedark.lua"
            }
        },
        "kitty": {
            "destination_file": "~/.kitty-theme.conf",
            "source_dir": "~/.kitty-themes/themes",
            "theme_name_mapping": {
                "solarized_light": "Solarized_Light.conf",
                "ondark": "OneDark.conf"
            }
        },
        "tmux": {
            "destination_file": "~/.tmux.theme.conf",
            "source_dir": "~/.dotfiles/themes/tmux",
            "theme_name_mapping": {
                "solarized_light": "solarized-light.lua",
                "ondark": "onedark.lua"
            }
        },
        "bash": {
            "destination_file": "~/.bash_theme",
            "source_dir": "~/.dotfiles/themes/bash",
            "theme_name_mapping": {
                "solarized_light": "solarized-light.bash",
                "ondark": "onedark.bash"
            }
        }
    }
}
