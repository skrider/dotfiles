{
  // don't use our gnarly neovim config
  "vscode-neovim.neovimClean": true,
  // fix caps lock rebinding issue
  "keyboard.dispatch": "keyCode",
  "workbench.colorTheme": "Monokai",
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'monospace', monospace",
  "editor.inlineSuggest.enabled": true,
  "editor.codeLensFontFamily": "'JetBrainsMono Nerd Font Mono', 'monospace', monospace",
  "editor.inlayHints.fontFamily": "'JetBrainsMono Nerd Font Mono', 'monospace', monospace",
  "scm.inputFontFamily": "'JetBrainsMono Nerd Font Mono', 'monospace', monospace",
  "debug.console.fontFamily": "'JetBrainsMono Nerd Font Mono', 'monospace', monospace",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": null
  },
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],
  "editor.formatOnSave": true,
  "github.copilot.advanced": {},
  "editor.minimap.enabled": false,
  "editor.minimap.autohide": true
}